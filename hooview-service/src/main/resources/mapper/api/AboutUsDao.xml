<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hooview.api.dao.AboutUsDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hooview.api.entity.AboutUsEntity" id="aboutUsMap">
        <result property="aboutUs" column="about_us"/>
    </resultMap>

	<select id="queryObject" resultType="com.hooview.api.entity.AboutUsEntity">
		select * from tb_about_us
	</select>
	 
	<update id="update" parameterType="com.hooview.api.entity.AboutUsEntity">
		update tb_about_us set about_us = #{aboutUs}
	</update>

</mapper>