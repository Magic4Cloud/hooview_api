<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hooview.api.dao.InfoCommentPraiseDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hooview.api.entity.InfoCommentPraiseEntity" id="financeInfoMap">
        <result property="infoCommentId" column="info_comment_id"/>
        <result property="userId" column="user_id"/>
    </resultMap>

	<select id="queryPraise" resultType="com.hooview.api.entity.InfoCommentPraiseEntity">
		select * from tb_info_comment_praise where info_comment_id = #{infoCommentId} AND  user_id = #{userId}
	</select>
	<insert id="save" parameterType="com.hooview.api.entity.InfoCommentPraiseEntity" useGeneratedKeys="true">
		insert into tb_info_comment_praise
		(
			`info_comment_id`,
			`user_id`
		)
		values
		(
			#{infoCommentId},
			#{userId}
		)
	</insert>
	
	<delete id="deletePraise">
		delete from tb_info_comment_praise where info_comment_id = #{infoCommentId}  AND  user_id = #{userId}
	</delete>


</mapper>