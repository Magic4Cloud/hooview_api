<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hooview.api.dao.PayTypeDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hooview.api.entity.PayTypeEntity" id="payTypeMap">
        <result property="payTypeId" column="pay_type_id"/>
        <result property="payTypeName" column="pay_type_name"/>
        <result property="appid" column="appid"/>
        <result property="mchId" column="mch_id"/>
        <result property="status" column="status"/>
    </resultMap>

	<select id="queryObject" resultType="com.hooview.api.entity.PayTypeEntity">
		select * from tb_pay_type where pay_type_id = #{value}
	</select>

	<select id="queryList" resultType="com.hooview.api.entity.PayTypeEntity">
		select * from tb_pay_type
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by pay_type_id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from tb_pay_type 
	</select>
	 
	<insert id="save" parameterType="com.hooview.api.entity.PayTypeEntity" useGeneratedKeys="true" keyProperty="payTypeId">
		insert into tb_pay_type
		(
			`pay_type_name`, 
			`appid`, 
			`mch_id`, 
			`status`
		)
		values
		(
			#{payTypeName}, 
			#{appid}, 
			#{mchId}, 
			#{status}
		)
	</insert>
	 
	<update id="update" parameterType="com.hooview.api.entity.PayTypeEntity">
		update tb_pay_type 
		<set>
			<if test="payTypeName != null">`pay_type_name` = #{payTypeName}, </if>
			<if test="appid != null">`appid` = #{appid}, </if>
			<if test="mchId != null">`mch_id` = #{mchId}, </if>
			<if test="status != null">`status` = #{status}</if>
		</set>
		where pay_type_id = #{payTypeId}
	</update>
	
	<delete id="delete">
		delete from tb_pay_type where pay_type_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from tb_pay_type where pay_type_id in 
		<foreach item="payTypeId" collection="array" open="(" separator="," close=")">
			#{payTypeId}
		</foreach>
	</delete>

</mapper>