<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hooview.api.dao.LiveTypeDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.hooview.api.entity.LiveTypeEntity" id="liveTypeMap">
        <result property="liveTypeId" column="live_type_id"/>
        <result property="typeName" column="type_name"/>
        <result property="status" column="status"/>
    </resultMap>

	<select id="queryObject" resultType="com.hooview.api.entity.LiveTypeEntity">
		select * from tb_live_type where live_type_id = #{value}
	</select>

	<select id="queryList" resultType="com.hooview.api.entity.LiveTypeEntity">
		select * from tb_live_type order by live_type_id
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from tb_live_type 
	</select>
	 
	<insert id="save" parameterType="com.hooview.api.entity.LiveTypeEntity">
		insert into tb_live_type
		(
			`live_type_id`, 
			`type_name`, 
			`status`
		)
		values
		(
			#{liveTypeId}, 
			#{typeName}, 
			#{status}
		)
	</insert>
	 
	<update id="update" parameterType="com.hooview.api.entity.LiveTypeEntity">
		update tb_live_type 
		<set>
			<if test="typeName != null">`type_name` = #{typeName}, </if>
			<if test="status != null">`status` = #{status}</if>
		</set>
		where live_type_id = #{liveTypeId}
	</update>
	
	<delete id="delete">
		delete from tb_live_type where live_type_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from tb_live_type where live_type_id in 
		<foreach item="liveTypeId" collection="array" open="(" separator="," close=")">
			#{liveTypeId}
		</foreach>
	</delete>

</mapper>